
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :class => "form-horizontal user" }) do |f| %>
  <fieldset>
  <legend>Sign up</legend>
    <%= devise_error_messages! %>
  <div class="form-group">
    <%= f.label :name, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@user[:name]) %>
  </div>
  <div class="form-group">
    <%= f.label 'Year of joining', :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.select :YOJ,  options_for_select((2008..Time.now.year).step(1).to_a.map{|s| ["#{s}", s]}),{},{ :class => 'form-control' } %>
    </div>
    <%= error_span(@user[:YOJ]) %>
  </div>
  <div class="form-group">
    <%= f.label :YOL, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.select :YOL,  options_for_select((2012..Time.now.year).step(1).to_a.map{|s| ["#{s}", s]}),{},{ :class => 'form-control' } %>
    </div>
    <%= error_span(@user[:YOL]) %>
  </div>
  <div class="form-group">
    <%= f.label :alumni, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.check_box :alumni %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pursued, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :pursued, :class => 'form-control' %>
    </div>
    <%= error_span(@user[:pursued]) %>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_area :description, :class => 'form-control' %>
    </div>
    <%= error_span(@user[:description]) %>
  </div>
  <div class="form-group">
    <%= f.label :current_designation, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :current_designation, :class => 'form-control' %>
    </div>
    <%= error_span(@user[:current_designation]) %>
  </div>
  <div class="form-group">
    <%= f.label :company_or_institution, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :company_or_institution, :class => 'form-control' %>
    </div>
    <%= error_span(@user[:company_or_institution]) %>
  </div>
  <div class="form-group">
    <%= f.label :dp_url, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :dp_url, :class => 'form-control' %>
    </div>
    <%= error_span(@user[:dp_url]) %>
  </div>
  <div class="form-group">
    <%= f.label :blog_url, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :blog_url, :class => 'form-control' %>
    </div>
    <%= error_span(@user[:blog_url]) %>
  </div>
  <div class="form-group">
    <%= f.label :ld_url, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :ld_url, :class => 'form-control' %>
    </div>
    <%= error_span(@user[:ld_url]) %>
  </div>
  <div class="form-group">
    <%= f.label :rollno, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :rollno, :class => 'form-control' %>
    </div>
    <%= error_span(@user[:rollno]) %>
  </div>
  <div class="form-group">
    <%= f.label :phone, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :phone, :class => 'form-control' %>
    </div>
    <%= error_span(@user[:phone]) %>
  </div>

  <div class="form-group">
    <%= f.label :email , :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
    <%= f.email_field :email, autofocus: true , :class => 'form-control'%>
    </div>
    <%= error_span(@user[:email]) %>
  </div>

  <div class="form-group">
    <%= f.label :password ,:class => 'col-lg-2 control-label' %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <div class="col-lg-10">
    <%= f.password_field :password, autocomplete: "off",:class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation ,:class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
    <%= f.password_field :password_confirmation, autocomplete: "off",:class => 'form-control' %>
    </div>
  </div>

  <%= f.submit "Sign up" ,class: 'btn btn-primary'%>
  </fieldset>
<% end %>
<%= render "users/shared/links" %>

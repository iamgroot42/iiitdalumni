<h1> Blog Posts </h1>
<div class="row">
  <div class="col-lg-8">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <div class="container" style="border-bottom: 2px solid gray;max-width:800px;padding:20px;">
        <div class="row">
          <div class="col-md-6">
            <%= image_tag(post.image_url,style: "max-height:220px;max-width:inherit;") %>
          </div>
          <div class="col-md-6">
            <h1 style="font-weight:bold;"><%= post.title %></h1>
            <p>
              <%= truncate(post.content, :length => 150) %>... | <%= link_to "Read More",post_path(post) %>
            </p>
            <% if post.user_id == current_user.id %>
              <%= link_to "Edit",edit_post_path(post) %> | <%= link_to "Delete", post_path(post), method: :delete %>
            <% end %>
          </div>
        </div>
        </div>
      <% end -%>
    <% else %>
      <h1 style="color:#A0A0A0;">No Posts yet</h1>
    <% end %>
  </div>
</div>
<h1> <%= @post.title %> </h1>
<hr>

<% if @post.image_url.present? %><%= image_tag @post.image_url,class: 'pull-left',style: "margin:10px"%><% end %>
<font color="gray">
<%= User.find(@post.user_id).name %>
<br/> <%= time_ago_in_words(@post.created_at) %> <br/>
<br/>
</font>

<p style="white-space: pre-wrap;">
<%= @post.content %> </p>
<%= link_to "back", :back , class: "btn btn-default" %>
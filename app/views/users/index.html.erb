<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:YOJ) %></th>
      <th><%= model_class.human_attribute_name(:YOL) %></th>
      <th><%= model_class.human_attribute_name(:alumni) %></th>
      <th><%= model_class.human_attribute_name(:pursued) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:current_designation) %></th>
      <th><%= model_class.human_attribute_name(:company_or_institution) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:encrypted_password) %></th>
      <th><%= model_class.human_attribute_name(:reset_password_token) %></th>
      <th><%= model_class.human_attribute_name(:reset_password_sent_at) %></th>
      <th><%= model_class.human_attribute_name(:remember_created_at) %></th>
      <th><%= model_class.human_attribute_name(:current_sign_in_at) %></th>
      <th><%= model_class.human_attribute_name(:last_sign_in_at) %></th>
      <th><%= model_class.human_attribute_name(:current_sign_in_ip) %></th>
      <th><%= model_class.human_attribute_name(:last_sign_in_ip) %></th>
      <th><%= model_class.human_attribute_name(:dp_url) %></th>
      <th><%= model_class.human_attribute_name(:blog_url) %></th>
      <th><%= model_class.human_attribute_name(:ld_url) %></th>
      <th><%= model_class.human_attribute_name(:rollno) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <%= @users.each do |x| %>
      <tr>
        <td><%= link_to x.id, user_path(x) %></td>
        <td><%= x.name %></td>
        <td><%= x.YOJ %></td>
        <td><%= x.YOL %></td>
        <td><%= x.alumni %></td>
        <td><%= x.pursued %></td>
        <td><%= x.description %></td>
        <td><%= x.current_designation %></td>
        <td><%= x.company_or_institution %></td>
        <td><%= x.email %></td>
        <td><%= x.encrypted_password %></td>
        <td><%= x.reset_password_token %></td>
        <td><%= x.reset_password_sent_at %></td>
        <td><%= x.remember_created_at %></td>
        <td><%= x.current_sign_in_at %></td>
        <td><%= x.last_sign_in_at %></td>
        <td><%= x.current_sign_in_ip %></td>
        <td><%= x.last_sign_in_ip %></td>
        <td><%= x.dp_url %></td>
        <td><%= x.blog_url %></td>
        <td><%= x.ld_url %></td>
        <td><%= x.rollno %></td>
        <td><%= x.phone %></td>
        <td><%= x.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_path(x), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_path(x),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_user_path,
            :class => 'btn btn-primary' %>

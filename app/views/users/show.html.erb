
<div class="row" style="padding:5px;">
<div class="col-lg-3" style="text-align:center;padding-top:15px;">
<h3><%=t '.title', :default => @user.name.titleize %></h3>
<br/>
  <%= image_tag @user.avatar.url.present? ? @user.avatar.url : "user-placeholder.png" ,style: "max-width:200px;max-height:200px" %> <br/><br/>
  <% if @user.alumni %>
    <div style="width:100px;margin:0 auto">
      <i>  <%= @user.pursued %> Student from <%= @user.YOJ %> to <%= @user.YOL %></i>
    </div>
    <br/>
  <% end %>
  <div style="padding:2px;border:1px solid gray;border-radius:4px;width:150px;margin:0 auto;">
    <%= link_to "mailto:"+@user.email,class: "btn-sm btn-default"  do %><i class="fa fa-envelope" style="font-size:25px"></i><% end %>
    <%= link_to @user.ld_url,class: "btn-sm btn-default"  do %><i class="fa fa-linkedin" style="font-size:25px"></i><% end %>
    <%= link_to @user.blog_url,class: "btn-sm btn-default"  do %><i class="fa fa-rss-square" style="font-size:25px"></i><% end %>
  </div>
  <br/>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_registration_path(@user), :class => 'btn btn-info' %>
 
</div>
<div class="col-lg-9" style="border-left:1px solid #F0F0F0;">
<br/>
<br/>
<div class="panel panel-default">
    <div class="panel-body">
        <%= @user.description.present? ? @user.description : "No Description Available" %>
    </div>
</div>
<dl class="dl-horizontal panel panel-default panel-body">
  <dt><strong><%= "Currently" %>:</strong></dt>
  <dd><%= @user.current_designation %></dd>
  <dt><strong><%= "Company/Institution" %>:</strong></dt>
  <dd><%= @user.company_or_institution %></dd>
  <dt><strong><%= "E-mail" %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= "Roll number" %>:</strong></dt>
  <dd><%= @user.rollno %></dd>
  <dt><strong><%= "Phone" %>:</strong></dt>
  <dd><%= @user.phone %></dd>
</dl>
<% if @user.posts.any? %>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Blog Posts<%= link_to "Write new post",new_post_path, class: "pull-right" %></h3>
    </div>
    <div class="panel-body" style="padding:0px">
        <table class="table table-striped table-hover ">
        <tbody>
        <% @user.posts.each do |post| %>
          <tr><td><%= link_to post.title, post_path(post) %> 
          <%= time_ago_in_words(post.created_at) %>
          </td></tr>
        <% end %>
        </tbody>
        </table>
    </div>
</div>
<% else %>
<%= link_to "Write new post",new_post_path, class: "btn btn-primary pull-right" %>
<% end %>
</div>
</div>
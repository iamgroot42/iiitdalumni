<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => @user.name %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= "Year of Joining" %>:</strong></dt>
  <dd><%= @user.YOJ %></dd>
  <dt><strong><%= "Year of Leaving" %>:</strong></dt>
  <dd><%= @user.YOL %></dd>
  <dt><strong><%= model_class.human_attribute_name(:alumni) %>:</strong></dt>
  <dd><%= @user.alumni %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pursued) %>:</strong></dt>
  <dd><%= @user.pursued %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @user.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:current_designation) %>:</strong></dt>
  <dd><%= @user.current_designation %></dd>
  <dt><strong><%= "Company/Institution" %>:</strong></dt>
  <dd><%= @user.company_or_institution %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= "Profile pic URL" %>:</strong></dt>
  <dd><%= @user.dp_url %></dd>
  <dt><strong><%= "Blog URL" %>:</strong></dt>
  <dd><%= @user.blog_url %></dd>
  <dt><strong><%= "LinkedIn URL" %>:</strong></dt>
  <dd><%= @user.ld_url %></dd>
  <dt><strong><%= "Roll number" %>:</strong></dt>
  <dd><%= @user.rollno %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @user.phone %></dd>
</dl>

<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_registration_path(@user), :class => 'btn btn-primary' %>

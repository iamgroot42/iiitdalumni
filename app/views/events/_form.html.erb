<%= form_for @event, :html => { :class => "form-horizontal event" } do |f| %>
  <fieldset>
    <% if @event.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <label class="col-lg-2 control-label" for="event_start_time">Start Time</label>
    <div class="col-lg-10">
      <input class="form-control datetimepicker" type="text" name="start_str" id="event_start_str" />
    </div>
  </div>
  <div class="form-group">
    <label class="col-lg-2 control-label" for="event_end_time">End Time</label>
    <div class="col-lg-10">
      <input class="form-control datetimepicker" type="text" name="end_str" id="event_end_str" />
    </div>
  </div>
  <div class="form-group">
    <%= f.label :title , :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :title , :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :summary , :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_area :summary , :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description , :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_area :description , :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :user_id , :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :user_id , :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :contact , :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_area :contact , :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :venue , :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_area :venue , :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fblink , :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :fblink , :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :photo , :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :photo , :class => "form-control" %>
    </div>
  </div>
    <%= f.submit nil,:class => "btn btn-primary" %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            posts_path, :class => 'btn btn-default' %>
</fieldset>
<% end %>
